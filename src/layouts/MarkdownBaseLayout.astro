---
import BaseLayout from './BaseLayout.astro'

interface Props {
  frontmatter: {
    title: string
  }
}

const { title } = Astro.props.frontmatter
---

<BaseLayout pageTitle={title}>
  <slot />
</BaseLayout>

<style>
  body {
    margin: 0 auto;
    padding: 5rem;

    /* mobile */
    @media screen and (max-width: 600px) {
      padding: 2rem;
    }
  }
</style>
